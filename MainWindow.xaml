<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="172*"/>
            <ColumnDefinition Width="621*"/>
        </Grid.ColumnDefinitions>
        <Menu Name="mi_open" Background="White" BorderBrush="Navy" BorderThickness="1" Grid.ColumnSpan="2">
            <MenuItem  Header="Смена Background" Click="MenuItem_Click"/>
            <MenuItem Header="О разработчике" Click="MenuItem_Click_1"/>
            <MenuItem Header="Закрыть окно" Click="MenuItem_Click_2"/>
        </Menu>
    </Grid>
</Window>
